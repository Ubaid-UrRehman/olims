<openerp>
	<data>
		<template id="report_certificate_of_analysis">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="doc">
				<div class="header">
			        <div class="row">
			            <div class="col-xs-6">
			                <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo" style="max-height: 45px;"/>
			            </div>
			            <div class="col-xs-6" name="company_address">
			                <div t-field="res_company.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
			            </div>
			        </div>
			        <div class="row">
			        </div>
			    </div>
					<div class="page">
						
							<div class="row">
								<div class="panel" style="background: #c1d598;">
									<div class="panel-heading" style="background:#23683b; border-bottom: 1px solid black;">
										<h1 class="panel-title text-center">Certificate of Analysis</h1>
									</div>
									<table class="table table-striped table-bordered" style="table-layout: fixed;">
									 	<thead>
									 		<tr>
						                        <th class="text-center"></th>
						                        <th class="text-center">Test</th>
						                        <th class="text-center">Results</th>
						                        <th class="text-center"></th>
						                        <th class="text-center">I-502 Limits</th>
						                    </tr>
						                </thead>
						                <tbody>
						                	<tr>
						                		<td  style="background: #c1d598; width: 100px;" t-att-rowspan="int(len(doc.Lab_Manage_Result)+len(doc.Field_Manage_Result)+1)">
						                			Date Received:<p t-field="doc.DateReceived"/>
						                			Client: <p t-field="doc.Client.Name"/>
						                			Sample Type: <p t-field="doc.SampleType.SampleType"/>
						                			Sample Name: <p t-field="doc.Sample_id.SampleID"/>
						                			Client ID: <p t-field="doc.Client.ClientID"/>
						                			<p style="color: #3a5f29"><strong>WSLCB</strong></p>
						                			<t t-if="doc.LotID">Lot ID: <p t-field="doc.LotID"/></t>
						                			<t t-if="doc.ClientSampleID">Sample ID: <p t-field="doc.ClientSampleID"/></t>
						                		</td>
						                	</tr>
						                	<t t-if="doc.Lab_Manage_Result">
							                	<tr t-foreach="doc.Lab_Manage_Result" t-as="l_result">
							                        <td class="text-center">
							                        	<span t-field="l_result.LabService.Service"/>
							                        </td>
							                        <td class="text-center">
							                            <t t-if="l_result.Result"><span t-field="l_result.Result"/></t>
							                            <t t-if="not l_result.Result">n/a</t>
							                            
							                        </td>
							                        <td class="text-center">
							                            <span t-field="l_result.LabService.Unit"/>
							                        </td>
							                        <td class="text-center">
							                            <t t-if="l_result.Specifications"><span t-field="l_result.Specifications"/></t>
							                            <t t-if="not l_result.Specifications">N/A</t>
							                        </td>
							                    </tr>
							                </t>
						                    <t t-if="doc.Field_Manage_Result">
							                	<tr t-foreach="doc.Field_Manage_Result" t-as="f_result">
							                        <td class="text-center">
							                        	<span t-field="f_result.Service.Service"/>
							                        </td>
							                        <td class="text-center">
							                            <t t-if="f_result.Result"><span t-field="f_result.Result"/></t>
							                            <t t-if="not f_result.Result">n/a</t>
							                            
							                        </td>
							                        <td class="text-center">
							                            <span t-field="f_result.Service.Unit"/>
							                        </td>
							                        <td class="text-center">
							                            <t t-if="f_result.Specifications"><span t-field="f_result.Specifications"/></t>
							                            <t t-if="not f_result.Specifications">N/A</t>
							                        </td>
							                    </tr>
							                </t>
						                </tbody>
					            	</table>
					            </div>
					        </div>
						    <div class="row">
						 		<div class="col-xs-6">
						 			<p>Laboratory ID: 3568-02</p>
						 			<p>Date Reported: <span t-esc="time.strftime('%Y-%m-%d %H:%M:%S')"/></p>
						 		</div>
						 	</div>
						 	<div style="page-break-before:always;"> </div>
					 	
					</div>
				</t>
			</t>
		</template>

	</data>
</openerp>