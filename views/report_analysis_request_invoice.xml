<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_analysis_request_invoice">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="header">
                    <div class="row mt32">
                        <div class="col-xs-4">
                        </div>
                        <div class="col-xs-4">
                            <img class="img img-responsive" src="/olims/static/src/img/testing-tech-logofb.jpg" style="max-height: 70px;"/>
                            <div t-field="res_company.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;website&quot;], &quot;no_marker&quot;: true}"/>
                        </div>
                        <div class="col-xs-4">
                            <p class="text-center">INVOICE</p>
                            <p class="text-center"><t t-esc="doc.name"/></p>
                        </div>
                    </div>
                </div>
                <div class="clearfix"/>
                <div class="page" style="padding-top:50px;">
                    <div class="row mt32">
                        <div class="col-xs-4">
                        </div>
                        <div class="col-xs-4">
                            <div class="row" style="background-color: #948b54">
                                <p class="text-center">Bill To:</p>
                            </div>
                            <div class="row">
                                <span t-esc="doc.client_id.Name"/>
                            </div>
                            <div class="row">
                                    <span t-esc="doc.client_id.physical_address"/>
                            </div>
                            <div class="row">
                                <span t-esc="doc.client_id.physical_city"/>
                            </div>
                            <div class="row">
                                <span t-esc="doc.client_id.ClientID"/>
                            </div>
                            <div class="row">
                                <span t-esc="', '.join(map(lambda x: x.name, doc.client_id.email))"/>
                            </div>
                        </div>
                        <div class="col-xs-4">
                        </div>
                    </div>
                    <div class="row mt32" style="background-color: #948b54;">
                        <div class="col-xs-4">
                            Date
                        </div>
                        <div class="col-xs-4">
                            Invoice Number
                        </div>
                        <div class="col-xs-4">
                            Terms
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <span t-esc="time.strftime('%Y-%m-%d %H:%M:%S')"/>
                        </div>
                        <div class="col-xs-4">
                            <span t-esc="doc.name"/>
                        </div>
                        <div class="col-xs-4">
                            <span t-esc="doc.client_id.payment_term_id.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="row mt32" style="background-color: #948b54">
                            <div class="col-xs-3">
                                <span class="text-center">Sample #</span>
                            </div>
                            <div class="col-xs-3">
                                <span class="text-center">Sample Name</span>
                            </div>
                            <div class="col-xs-3">
                                <span class="text-center">Sample ID#</span>
                            </div>
                            <div class="col-xs-3">
                                <span class="text-center">Ammount</span>
                            </div>
                        </div>
                        <t t-foreach="doc.analysis_request_id" t-as="analysis">
                            <div class="col-xs-3">
                                <span class="text-center" t-esc="analysis.RequestID"/>
                            </div>
                            <div class="col-xs-3">
                                <span class="text-center" t-esc="analysis.SampleType.SampleType"/>
                            </div>
                            <div class="col-xs-3">
                                <span class="text-center" t-esc="analysis.ClientSampleID"/>
                            </div>
                            <div class="col-xs-3">
                                <span class="text-center" t-esc="res_company.currency_id.symbol"/><span t-esc="analysis.Total"/>
                            </div>
                        </t>
                    </div>
                    <div class="row mt32" style="background-color: #948b54">
                        <div class="col-xs-3">
                        </div>
                        <div class="col-xs-3">
                        </div>
                        <div class="col-xs-3">
                            Total
                        </div>
                        <div class="col-xs-3">
                            <span class="text-center" t-esc="res_company.currency_id.symbol"/><span t-esc="doc.total"/>
                        </div>
                    </div>
                    <div style="page-break-before:always;"> </div>
                </div>
            </t>
        </t>
    </template>
</odoo>